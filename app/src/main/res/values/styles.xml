<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressDialog" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText"> </item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="DialogSpotColor">@color/colorPrimary</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Base application theme. -->
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>


    <style name="ThemeOverlay.AppCompat.navTheme">
        <item name="android:ellipsize">end</item>
        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">@color/textColorPrimary</item>
        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">@color/light_gray</item>
    </style>

    <!-- To remove actionbar  -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Generic component  -->
    <style name="ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DialogNoActionBarMinWidth" parent="@android:style/Theme.Material.Light.Dialog.NoActionBar.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
